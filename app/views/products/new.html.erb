<h1>New Listing</h1>
<%= form_for [current_user, @product] do |f| %>
<div class="new-listing-form">
  <div>
    <%= f.label "Product Name" %>
    <%= f.text_field :name, class: "form_field" %> <br />

    <%= f.label "Image Url" %>
    <%= f.text_field :img_url, class: "form_field" %> <br />

    <%= f.label "Price" %>
    <%= f.text_field :price, class: "form_field" %> <br />
  </div>
  <div>
    <%= f.label "Description" %> <br />
    <%= f.text_area :description, class: "" %>
  </div>
</div>
<h2>Categories</h2>
  <% @categories.each do |category| %>
    <div>
      <%= label_tag "#{category.name}" %>
      <%= check_box_tag "#{category.id}"%>
    </div>
  <% end %>
</div>
<%= f.submit "Create Listing" %>
<% end %>
